<!DOCTYPE html>
<html>
  <head>
    <title>AuthSys</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if logged_in? %>
      <p> logged in as: <%= current_user.email %> <%= link_to  "logout", logout_path, method: :delete %> </p>
      <% else %>
      <p> <%= link_to  "log-in now!", login_path %> </p>
    <% end %>
    <%= yield %>
  </body>
</html>
