<%= form_for(@user) do |f| %>
<% if @user.errors.any? %>
<ul>
<% @user.errors.full_messages.each do |msg|%>
        <li><%=msg%></li>
<% end %>
</ul>
<% end %>
    <%= f.label :name %>
    <%= f.text_field :name , :autocomplete => :off  %>
    <%= f.label :email %>
    <%= f.email_field :email , :autocomplete => :off  %>
    <%= f.label :password %>
    <%= f.password_field :password , :autocomplete => :off %>
    <%= f.submit "Update" %>
<% end %>